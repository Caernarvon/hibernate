<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="items.Country" table="CountryH">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="int" column="id"/>
        <property name="shortName" column="shortName" type="string"/>
        <property name="fullName" column="fullName" type="string"/>
        <property name="emblemId" column="emblemId" type="int"/>
    </class>
</hibernate-mapping>